# Boxstarter options

$Boxstarter.RebootOk=$true # Allow reboots?
$Boxstarter.NoPassword=$false # Is this a machine with no login password?
$Boxstarter.AutoLogin=$true # Save my password securely and auto-login after a reboot

# Configure Windows
Set-WindowsExplorerOptions -EnableShowHiddenFilesFoldersDrives -EnableShowProtectedOSFiles -EnableShowFileExtensions -EnableShowFullPathInTitleBar
Set-TaskbarOptions -Size Small -Dock Bottom -Combine Full -Lock
Update-ExecutionPolicy Unrestricted
Disable-UAC

Enable-WindowsOptionalFeature -Online -FeatureName Microsoft-Windows-Subsystem-Linux
Enable-WindowsOptionalFeature -Online -FeatureName Microsoft-Hyper-V-All

if (Test-PendingReboot) { Invoke-Reboot }


# Packages
cinst -y ConEmu

## Git
cinst -y git-credential-manager-for-windows #installs git

## Node, npm
cinst -y nodejs.install
refreshenv
npm install -g npm-windows-upgrade

## Editors
cinst -y visualstudiocode
cinst -y atom

## Basics
cinst -y Firefox
cinst -y Vivaldi
cinst -y 7zip.install
#cinst -y sysinternals
cinst -y postman
cinst -y fiddler4
cinst -y openvpn
cinst -y docker-for-windows
cinst -y dbkoda
cinst -y HeidiSql
cinst -y linqpad
cinst -y fake --pre
cinst -y paket


## Configure .NET environment
if (Test-PendingReboot) { Invoke-Reboot }
#cinst -y DotNet3.5
#cinst -y visualstudio2017professional
cinst -y visualstudio2017community
cinst -y visualstudio2017-workload-netweb 

